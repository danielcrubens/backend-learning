{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "always",
			"quoteStyle":"single"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noUnusedTemplateLiteral": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off"
			},
			"complexity": {
				"noForEach": "warn"
			},
			"suspicious": {
				"noArrayIndexKey": "info"
			}
		}
	},
	"files": {
		"ignore": ["node_modules/**", "dist/**", "build/**"]
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	}
}
